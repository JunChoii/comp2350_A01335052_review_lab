<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="bulma.min.css" />
    <script
      defer
      src="https://use.fontawesome.com/releases/v5.3.1/js/all.js"
    ></script>
  </head>
  <body>
    <section class="section">
      <div class="maincolumns columns is-desktop is-vcentered">
        <div
          class="column is-10 is-offset-1 notification is-info is-light box container"
        >
          <div class="title">Restaurants</div>
          <% if (locals) { %>
          <!-- ??? why locals??? -->
          <div class="table-container">
            <table class="table is-bordered is-hoverable is-striped is-narrow">
              <thead>
                <tr>
                  <th>#</th>
                  <th>Name</th>
                  <th>Description</th>
                  <th></th>
                  <th></th>
                </tr>
              </thead>
              <% let i=0; %> <% for(i=0; i < Restaurants.length; i++) { %>
              <tr>
                <td><%= Restaurants[i].restaurant_id %></td>
                <td><%= Restaurants[i].name %></td>
                <td><%= Restaurants[i].description %></td>
                <td>
                  <a href="/deleteRestaurant"><i class="fas fa-trash"></i></a>
                </td>
                <td>
                  <a href="/showReview"><i class="fas fa-star"></i></a>
                </td>
              </tr>
              <% } %>
              <tfoot>
                <tr>
                  <td colspan="5">There are <%= i %> restaurants.</td>
                </tr>
              </tfoot>
            </table>
          </div>
          <% } %>
        </div>
      </div>
    </section>
  </body>
</html>
