<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="bulma.min.css" />
    <script
      defer
      src="https://use.fontawesome.com/releases/v5.3.1/js/all.js"
    ></script>
  </head>
  <body>
    <section class="section">
      <div class="maincolumns columns is-desktop is-vcentered">
        <div
          class="column is-10 is-offset-1 notification is-info is-light box container"
        >
          <div class="title">Restaurants</div>
          <% if (locals.restaurants) { %>
          <!-- ??? why locals??? -->
          <div class="table-container">
            <table class="table is-bordered is-hoverable is-striped is-narrow">
              <thead>
                <tr>
                  <th>#</th>
                  <th>Name</th>
                  <th>Description</th>
                  <th></th>
                  <th></th>
                </tr>
              </thead>
              <% for(i=0; i < restaurants.length; i++) { %>
              <tr>
                <td><%= restaurants[i].restaurant_id %></td>
                <td><%= restaurants[i].name %></td>
                <td><%= restaurants[i].description %></td>
                <td>
                  <a
                    href="/deleteRestaurant?id=<%= restaurants[i].restaurant_id %>"
                    ><i class="fas fa-trash"></i
                  ></a>
                </td>
                <td>
                  <a href="/showReview?id=<%= restaurants[i].restaurant_id %>">
                    <span class="icon is-small">
                      <i class="fas fa-star"></i> </span
                  ></a>
                </td>
              </tr>
              <% } %>
              <tfoot>
                <tr>
                  <td colspan="5">There are <%= i %> restaurants.</td>
                </tr>
              </tfoot>
            </table>
          </div>
          <% } %>
          <form action="/addRestaurant" method="POST">
            <div class="field is-horizontal">
              <div class="field-label is-normal">
                <label class="label">Add Restaurant</label>
              </div>
              <div class="field-body">
                <div class="field">
                  <p class="control is-expanded">
                    <input
                      name="name"
                      class="input"
                      type="text"
                      placeholder="Restaurant Name"
                    />
                  </p>
                </div>
                <div class="field">
                  <p class="control is-expanded">
                    <input
                      name="description"
                      class="input"
                      type="text"
                      placeholder="Description"
                    />
                  </p>
                </div>
                <div class="field">
                  <button class="button is-link">
                    <span>Add</span>
                    <span class="icon is-small">
                      <i class="fas fa-utensils"></i>
                    </span>
                  </button>
                </div>
              </div>
            </div>
          </form>
        </div>
      </div>
    </section>
  </body>
</html>
